<%- include('partials/nav') -%>




<h2 class="title-itinerary">Location: <%= destination.location %></h2>
<!-- <h2><%= destination.location %></h2> -->


<% for(var i = 0; i < restaurants.length; i++) { %>

<div class="card mb-3 mx-auto" style="max-width: 800px;">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%= restaurants[i].image_url %>" alt="gallery" class="img-fluid rounded-start">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <form action="/post/addIten/<%= destination.location %>" method="POST">
          <input class="card-title w-100 fw-bold fs-4" name="name" value="<%= restaurants[i].name %>" readonly>
          <input class="text-body-secondary w-100 mt-1" name="type" value="<%= restaurants[i].categories[0].title %>" readonly>
          <input class="card-text w-100 mt-3" name="rating" value="<%= restaurants[i].rating %>" readonly>
          <input class="card-text w-100 mt-3" name="price" value="<%= restaurants[i].price %>" readonly>
          <input class="card-text w-100 mt-3" name="address" value="<%= restaurants[i].location.display_address %>" readonly>
          <input class="card-text w-100 mt-3" name="phone" value="<%= restaurants[i].display_phone %>" readonly>
          <input class="btn btn-outline-danger add mt-3 mx-auto w-40" type="submit" value="Add to Trip">
        </form>
      </div>
    </div>
  </div>
</div>

<% } %>




<script src= "../main.js" type="text/javascript" ></script>
  

<%- include('partials/footer') -%>









